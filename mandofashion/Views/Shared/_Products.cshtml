@model IEnumerable<mandofashion.Models.SanPham>

<div class="content-product-list product-list filter clearfix">

    @foreach (var item in Model)
    {
        <div class="col-md-3 col-sm-6 col-xs-6 pro-loop col-4">
            <div class="product-block product-resize site-animation">
                <div class="product-img">

                    @*<div class="sold-out"><span>Hết hàng</span></div>*@
                    <a href="@Url.Action("Detail", new { id = item.MaSP })" title="@item.TenSP"
                       class="image-resize">
                        <picture>
                            <img class="img-loop" alt=" @item.TenSP" src="~/images/products/@item.DuongDanAnh" />
                        </picture>

                        <picture>
                            <img class="img-loop img-hover" alt="@item.TenSP" src="~/images/products/@item.DuongDanAnh2" />
                        </picture>
                        
                    </a>
                    @*<div class="button-add hidden">
                            <button type="submit" title="Buy now" class="action" onclick="buy_now('1102316822')">Mua ngay<i class="fa fa-long-arrow-right"></i></button>
                        </div>*@
                    <div class="pro-price-mb">
                        <span class="pro-price">@item.GiaBan₫</span>
                    </div>
                </div>
                <div class="product-detail clearfix">
                    <div class="box-pro-detail">
                        <h3 class="pro-name">
                            <a href="@Url.Action("Detail", new { id = item.MaSP })">@item.TenSP</a>
                        </h3>
                        <div class="box-pro-prices">
                            <p class="pro-price ">
                                <span>@item.GiaBan₫</span>

                            </p>
                        </div>
                        <p>
                            @Html.ActionLink("Thêm vào giỏ hàng", "OrderNow", "ShoppingCart", new { Id = item.MaSP }, null)
                        </p>
                    </div>
                </div>
            </div>
        </div>
    }

</div>